<% if target.errors.any? %>
	<div class="error_explanation">
	  <button type="button" class="close" data-dismiss="alert">&times;</button>
	  <h3><%= pluralize(target.errors.count, "error") %></h3>
	  <ul>
	  <% target.errors.full_messages.each do |msg| %>
	    <li><%= msg %></li>
	  <% end %>
	  </ul>
	</div>
<% end %>