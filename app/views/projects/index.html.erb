<h1>Listing projects</h1>
<div id="dropdown-search">
<%= form_tag projects_path, :remote => true do %>
  <%= select_tag(:option, options_for_select('A'..'Z'), { :include_blank => "Sort the Project",:id=> "project_select",:class=> "btn btn-default dropdown-toggle"}) %>
<% end %>
</div>
<div id="new_project">
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="projects">
      <%= render :partial=> "project_list" %>
  </tbody>
</table>

<br>
<%= link_to 'New Project', new_project_path,:remote=> true ,:class=> "btn btn-success"%>


