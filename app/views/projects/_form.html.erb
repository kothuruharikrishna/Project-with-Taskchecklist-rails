<%= form_for(@project,:remote=> true,:html=> {:class=> "form-inline"}) do |f| %>
  <div id="error-div"></div>

  <div class="field">
    <%= f.label :name,"Project Name" %><br>
    <%= f.text_field :name,:class=> "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit :class=> "btn btn-default" %>
  </div>
<% end %>
